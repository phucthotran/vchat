<UserControl x:Class="vChat.Module.Chat.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel LastChildFill="True" DockPanel.Dock="Bottom">
            <Button IsDefault="True" Name="Submit" Content="Gửi" DockPanel.Dock="Right" Width="61" Click="Submit_Click" />
            <RichTextBox Name="MessageInput" DockPanel.Dock="Left" MinHeight="50"></RichTextBox>
        </DockPanel>
        <RichTextBox Name="MessageView" DockPanel.Dock="Top" MinHeight="250" MinWidth="400"/>
    </DockPanel>
</UserControl>
