<UserControl x:Class="vChat.Module.Chat.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:part="clr-namespace:vChat.Module.Chat.ViewParts"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Bottom">
            <part:ChatToolBar x:Name="ChatToolBar" DockPanel.Dock="Top"></part:ChatToolBar>
            <Button IsDefault="True" Name="Submit" Content="Gửi" DockPanel.Dock="Right" Width="61" Click="Submit_Click" />
            <RichTextBox Name="MessageInput" ScrollViewer.HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Left" Height="50" AcceptsReturn="False"></RichTextBox>
        </DockPanel>
        <RichTextBox Name="MessageView" ScrollViewer.HorizontalScrollBarVisibility="Auto" IsReadOnly="True" DockPanel.Dock="Top" MinHeight="200" MinWidth="400"></RichTextBox>
    </DockPanel>
</UserControl>
