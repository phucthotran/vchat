<UserControl x:Class="vChat.Module.VoIP.VoIP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="32" MinWidth="420">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Name="btnCall" Click="btnCall_Click" Grid.Column="0" Content="Thực Hiện Cuộc Gọi Thoại Tới" FontSize="13" Margin="0, 0, 3, 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5"/>
        <TextBox Text="{Binding RemoteIPAddress}" Grid.Column="1" FontSize="13" VerticalContentAlignment="Center" Margin="0, 0, 3, 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Name="btnEndCall" Click="btnEndCall_Click" Grid.Column="2" Content="Kết Thúc" FontSize="13" Margin="0, 0, 3, 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5"/>
    </Grid>
</UserControl>
